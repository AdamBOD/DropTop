{
    "name": "DropTop",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Share small snippets of data between devices",
    "permissions": ["storage", "tabs"],

    "background": {
        "scripts": ["assets/scripts/background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "DropTop"
    },
    
    "options_page": "popup.html"
}